<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center_horizontal"
              android:orientation="vertical"
              android:layout_marginLeft="8dp"
              android:layout_marginTop="8dp"
              android:layout_marginRight="8dp"
              android:layout_marginBottom="8dp"
              android:background="@android:color/transparent">

    <!-- header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:background="@drawable/compose_top_bar">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:layout_marginLeft="8dp"
            android:padding="6dp"
            android:cropToPadding="true"
            android:background="@drawable/ic_default_avatar_white"
            android:id="@+id/imageViewComposeUserAvatar"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@id/imageViewComposeUserAvatar">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="left|center"
                android:minWidth="60dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/compose_text_view_username"
                android:background="@null"
                android:text="username"
                android:id="@+id/textViewComposeUsername"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingBottom="4dp"
                android:visibility="gone"
                android:textSize="10sp"
                android:textColor="@color/compose_text_view_long_text"
                android:background="@null"
                android:text="longerText"
                android:id="@+id/textViewComposeLongerText" />

        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:padding="10dp"
            android:src="@drawable/ic_talk_white"
            android:background="@drawable/compose_default_image_button"
            android:id="@+id/imageButtonComposeTalk" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_toLeftOf="@id/imageButtonComposeTalk"
            android:padding="10dp"
            android:src="@drawable/ic_memo_white"
            android:background="@drawable/compose_default_image_button"
            android:id="@+id/imageButtonComposeMemo" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_toLeftOf="@id/imageButtonComposeMemo"
            android:padding="10dp"
            android:src="@drawable/ic_article_white"
            android:background="@drawable/compose_default_image_button"
            android:id="@+id/imageButtonComposeArticle" />

    </RelativeLayout>

    <!-- input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:inputType="textCapSentences|textAutoCorrect|textMultiLine"
            android:textCursorDrawable="@null"
            android:hint="@string/base_compose_activity_edit_title_hint"
            android:textColorHint="@color/compose_edit_title_hint"
            android:textColor="@color/compose_edit_title"
            android:background="@color/compose_edit_title_background"
            android:id="@+id/editTextComposeTitle" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbarStyle="outsideOverlay"
            android:id="@+id/scrollViewTextContainer">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:padding="16dp"
                android:inputType="textCapSentences|textAutoCorrect|textMultiLine"
                android:textCursorDrawable="@null"
                android:hint="@string/base_compose_activity_edit_text_hint"
                android:textColorHint="@color/compose_edit_text_hint"
                android:textColor="@color/compose_edit_text"
                android:background="@color/compose_edit_text_background"
                android:id="@+id/editTextComposeText" />

        </ScrollView>

    </LinearLayout>

    <!-- footer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/compose_bottom_bar">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_cancel_white"
            android:background="@drawable/compose_default_image_button"
            android:id="@+id/imageButtonComposeCancel" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_clear_white"
            android:background="@drawable/compose_default_image_button"
            android:id="@+id/imageButtonComposeClear" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_copy_white"
            android:background="@drawable/compose_default_image_button"
            android:id="@+id/imageButtonComposeCopy" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/compose_default_image_button"
            android:src="@drawable/ic_send_white"
            android:id="@+id/imageButtonComposeSend" />

    </LinearLayout>

</LinearLayout>
