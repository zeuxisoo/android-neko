<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:background="@android:color/transparent">

    <!-- header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:background="@drawable/compose_top_bar">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:layout_marginLeft="8dp"
            android:padding="6dp"
            android:cropToPadding="true"
            android:background="@drawable/ic_default_avatar_white"
            android:id="@+id/imageViewEditUserAvatar"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/imageViewEditUserAvatar">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="left|center"
                android:minWidth="60dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/compose_text_view_username"
                android:background="@null"
                android:text="username"
                android:id="@+id/textViewEditUsername"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingBottom="4dp"
                android:visibility="gone"
                android:textSize="10sp"
                android:textColor="@color/compose_text_view_long_text"
                android:background="@null"
                android:text="longerText"
                android:id="@+id/textViewEditLongerText" />

        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:padding="10dp"
            android:src="@drawable/ic_talk_white"
            android:background="@drawable/compose_default_image_button"
            android:id="@+id/imageButtonEditTalk" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_toLeftOf="@id/imageButtonEditTalk"
            android:padding="10dp"
            android:src="@drawable/ic_memo_white"
            android:background="@drawable/compose_default_image_button"
            android:id="@+id/imageButtonEditMemo" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_toLeftOf="@id/imageButtonEditMemo"
            android:padding="10dp"
            android:src="@drawable/ic_article_white"
            android:background="@drawable/compose_default_image_button"
            android:id="@+id/imageButtonEditArticle" />

    </RelativeLayout>

    <!-- input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbarStyle="outsideOverlay">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:padding="16dp"
                android:inputType="textCapSentences|textAutoCorrect|textMultiLine"
                android:textCursorDrawable="@null"
                android:hint="@string/compose_activity_edit_text_hint"
                android:textColorHint="@color/compose_edit_text_hint"
                android:textColor="@color/compose_edit_text"
                android:background="@color/compose_edit_text_background"
                android:id="@+id/editTextEditContent" />

        </ScrollView>

    </LinearLayout>

    <!-- footer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/compose_bottom_bar">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_cancel_white"
            android:background="@drawable/compose_default_image_button"
            android:id="@+id/imageButtonEditCancel" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_clear_white"
            android:background="@drawable/compose_default_image_button"
            android:id="@+id/imageButtonEditClear" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_copy_white"
            android:background="@drawable/compose_default_image_button"
            android:id="@+id/imageButtonEditCopy" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/compose_default_image_button"
            android:src="@drawable/ic_send_white"
            android:id="@+id/imageButtonEditSend" />

    </LinearLayout>

</LinearLayout>
