<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Smooth Progress Bar (circular) color -->
    <integer-array name="colorCircularProgressBarDark">
        <item>@color/colorRed</item>
        <item>@color/colorGreen</item>
        <item>@color/colorBlue</item>
        <item>@color/colorPink</item>
        <item>@color/colorWhite</item>
    </integer-array>

    <!-- App base color -->
    <color name="colorPrimary">#2a3038</color>
    <color name="colorPrimaryDark">#6042b3</color>
    <color name="colorAccent">#a1a3d7</color>

    <!-- Global theme color, like TextInputLayout color, toolbar background -->
    <color name="colorThemeDark">#353c42</color>

    <!-- Activity background color :: global -->
    <color name="colorWindowBackgroundDark">#272c30</color>

    <!-- Activity background color -->
    <color name="colorDashboardBackgroundDark">#272c30</color>
    <color name="colorDashboardPanelHeadingBackgroundDark">#364144</color>
    <color name="colorDashboardPanelHeadingTextDark">#FFFFFF</color>
    <color name="colorDashboardPanelBodyBackgroundDark">#485460</color>
    <color name="colorDashboardPanelBodyTextDark">#88939c</color>

    <!-- Widget background color -->
    <color name="colorToolbarBackgroundDark">#353c42</color>

    <!-- Snack bar style -->
    <color name="colorSnackbarBackground">#404f63</color>
    <color name="colorSnackbarText">@color/colorWhite</color>

    <!-- Simply system color -->
    <color name="colorWhite">@android:color/white</color>

    <color name="colorRed">#FF0000</color>
    <color name="colorGreen">#00FF00</color>
    <color name="colorBlue">#0000FF</color>
    <color name="colorPink">#FF00FF</color>
</resources>
