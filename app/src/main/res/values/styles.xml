<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo">
        <!-- Customize your theme here. -->
    </style>

    <!-- Main activity theme, drawer layout must render from theme.appcompat (AndroidManifest set) -->
    <style name="AppTheme.MainActivity" parent="@style/Theme.AppCompat">
        <item name="windowActionBar">false</item>
    </style>

    <!--Compose activity theme-->
    <style name="ActionBar.Black.Overlay" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/actionbar_overlay_background</item>
    </style>

    <style name="AppTheme.ComposeActivity" parent="@style/Theme.AppCompat">
        <item name="android:windowBackground">@color/compose_background</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>

        <item name="android:actionBarStyle">@style/ActionBar.Black.Overlay</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <!-- Login activity edit text style -->
    <style name="FletTextAppearance" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/login_float_label</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
    </style>

</resources>
