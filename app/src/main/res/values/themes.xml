<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseAppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">?attr/themeColor</item>
        <item name="colorPrimaryDark">?attr/themeColor</item>
        <item name="colorAccent">?attr/themeColor</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@color/colorWindowBackgroundDark</item>

        <item name="android:windowIsTranslucent">true</item>

        <item name="widgetToolbarBackgroundDark">@color/colorToolbarBackgroundDark</item>
        <item name="activityDashboardBackgroundDark">@color/colorDashboardBackgroundDark</item>
    </style>

    <style name="AppThemeDark" parent="BaseAppThemeDark">
        <item name="themeColor">@color/colorThemeDark</item>
    </style>

    <!--  -->
    <style name="AppThemeDark.CircularProgressBar" parent="CircularProgressBar">
        <item name="cpb_color">@color/colorPrimary</item>
        <item name="cpb_colors">@array/colorCircularProgressBarDark</item>
        <item name="cpb_stroke_width">3dp</item>
        <item name="cpb_min_sweep_angle">50</item>
        <item name="cpb_max_sweep_angle">300</item>
        <item name="cpb_sweep_speed">1.0</item>
        <item name="cpb_rotation_speed">1.0</item>
    </style>

    <style name="AppThemeDark.SmoothProgressBar" parent="SmoothProgressBar">
        <item name="spb_colors">@array/colorCircularProgressBarDark</item>
        <item name="spb_stroke_width">4dp</item>
        <item name="spb_sections_count">4</item>
        <item name="spb_speed">0.7</item>
        <item name="spb_interpolator">spb_interpolator_linear</item>
        <item name="spb_stroke_separator_length">12dp</item>
    </style>

</resources>