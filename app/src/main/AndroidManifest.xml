<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="im.after.app" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name="im.after.app.AppContext"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="im.after.app.AppStart"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="im.after.app.ui.LoginActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" >
        </activity>
        <activity
            android:name="im.after.app.ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.MainActivity" >
        </activity>
        <activity
            android:name=".ui.module.talk.TalkCreateActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.ComposeActivity" >
        </activity>
        <activity
            android:name=".ui.module.talk.TalkEditActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.ComposeActivity" >
        </activity>
        <activity
            android:name=".ui.module.memo.MemoCreateActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.ComposeActivity" >
        </activity>
        <activity
            android:name=".ui.module.memo.MemoEditActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.ComposeActivity" >
        </activity>
    </application>

</manifest>
