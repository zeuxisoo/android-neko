<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="im.after.app" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <supports-screens
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:anyDensity="true" />

    <application
        android:name="im.after.app.AppContext"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <service android:enabled="true" android:name="im.after.app.service.NetworkStateService" />
        <!--<receiver android:enabled="true" android:name="im.after.app.ui.receiver.MainActivityReceiver" />-->
        <activity
            android:name="im.after.app.AppStart"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            android:configChanges="locale|layoutDirection">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="im.after.app.ui.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.MainActivity"
            android:configChanges="locale|layoutDirection">
        </activity>
        <activity
            android:name="im.after.app.ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.MainActivity"
            android:configChanges="locale|layoutDirection">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.module.talk.TalkCreateActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.ComposeActivity"
            android:configChanges="locale|layoutDirection">
        </activity>
        <activity
            android:name=".ui.module.talk.TalkEditActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.ComposeActivity"
            android:configChanges="locale|layoutDirection">
        </activity>
        <activity
            android:name=".ui.module.memo.MemoCreateActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.ComposeActivity"
            android:configChanges="locale|layoutDirection">
        </activity>
        <activity
            android:name=".ui.module.memo.MemoEditActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.ComposeActivity"
            android:configChanges="locale|layoutDirection">
        </activity>
        <activity
            android:name=".ui.module.article.ArticleCreateActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.ComposeActivity"
            android:configChanges="locale|layoutDirection">
        </activity>
        <activity
            android:name=".ui.module.article.ArticleEditActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.ComposeActivity"
            android:configChanges="locale|layoutDirection">
        </activity>
        <activity
            android:name=".ui.module.article.ArticleFullActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.ComposeActivity"
            android:configChanges="locale|layoutDirection">
        </activity>
        <activity
            android:name=".ui.SettingsActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:configChanges="locale|layoutDirection">
        </activity>
    </application>

</manifest>
